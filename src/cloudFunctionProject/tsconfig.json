{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "cloudfunctions",
    "strict": false,
    "noImplicitUseStrict": true,
    "target": "ES2017",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "../",
    "declaration": true,
    "paths": {
      "@mono-shared/*": ["../mono-shared/src/*"]
    },
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}

